
@model List<MeetingModel>;
@{
    ViewData["Title"] = "ViewMeetings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Meetings</h2>

@if (Model.Count() > 0)
{

    <table class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Category</th>
            <th>SubCategory</th>
            <th>Subject</th>
            <th>Approval</th>
            <th>Meeting Status</th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date</td>
                <td>@item.CategoryModel.Name</td>
                <td>@item.SubCategoryModel.Name</td>
                <td>@item.Subject</td>
                <td>@item.DisplayApproval</td>
                <td align="center">@item.DisplayStatus</td>
            </tr>
        }

    </table>
}

